pipeline {
    agent any

    stages {
        stage('BUILD') {
            steps {
                touch job.log
                echo 'date +"%D %X" > job.log'
                cat job.log
            }
        }
        stage('TEST') {
            steps {
                echo 'Тестируем нашу сборку'
            }
        }
        stage('DEPLOY') {
            steps {
                echo 'Deploy staging'
                sh 'git add job.log'
                sh 'git commit -m "added job log"'
                sh 'git push'
            }
        }
    }
}
